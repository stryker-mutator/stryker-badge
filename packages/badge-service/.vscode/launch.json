{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Unit Tests",
      "program": "${workspaceRoot}/../../node_modules/mocha/bin/_mocha",
      "args": [
        "-u",
        "tdd",
        "--timeout",
        "999999",
        "--colors",
        "${workspaceRoot}/**/*Spec.js"
      ],
      "internalConsoleOptions": "openOnSessionStart"
    },
    {
      "name": "Attach to Azure Functions",
      "type": "node",
      "request": "attach",
      "port": 5858
    },
    {
      "name": "Attach to Azure Functions (Java)",
      "type": "java",
      "request": "attach",
      "port": 5005
    }
  ]
}